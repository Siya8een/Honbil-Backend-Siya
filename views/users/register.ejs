<% layout('layouts/boilerplate2')%>

<div class="container my-5">
  <div class="card">
    <form
      action="/register"
      method="POST"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <!-- Card header -->
      <div class="card-header py-4 px-5 bg-light border-0">
        <h4 class="mb-0 fw-bold">Register Here</h4>
      </div>

      <!-- Card body -->
      <div class="card-body px-5">
        <!-- Account section -->
        <div class="row gx-xl-5">
          <div class="col-md-4">
            <h5>Account</h5>
            <p class="text-muted">
              Please add your exact Account details as that will be used to
              verify your licence and dealership.
            </p>
          </div>

          <div class="col-md-8">
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                style="max-width: 500px"
                required
                autofocus
              />
              <div class="fs-6 fw-lighter">
                Please don't add spaces in your username and remember it for
                later use
              </div>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email address</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                style="max-width: 500px"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Whatsapp number</label>
              <input
                class="form-control"
                type="number"
                id="phone"
                name="phone"
                style="max-width: 500px"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="location"
                >Your Shop Location</label
              >
              <input
                class="form-control"
                type="text"
                id="location"
                name="location"
                style="max-width: 500px"
                required
              />
            </div>
          </div>

          <hr class="my-5" />

          <!-- Adhar section -->
          <div class="row gx-xl-5">
            <div class="col-md-4">
              <h5>Owner Identification</h5>
              <p class="text-muted">
                Please upload the photo of your adhar card for verfication
              </p>
            </div>

            <div class="col-md-8">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <div class="form-file custom-file">
                      <input
                        type="file"
                        class="form-file-input"
                        id="file"
                        name="image"
                        multiple
                        required
                      />
                      <label class="form-file-label" for="image"> </label>

                      <div id="selectedFiles"></div>
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <hr class="my-5" />

          <!-- Legal documents -->
          <div class="row gx-xl-5">
            <div class="col-md-4">
              <h5>Rental Identification</h5>
              <p class="text-muted">
                Please add legal documents that verify your Shop
              </p>
            </div>
            <div class="col-md-8">
              <div class="mb-3">
                <div class="form-file custom-file">
                  <input
                    type="file"
                    class="form-file-input"
                    id="file2"
                    name="legal"
                    multiple
                    required
                  />
                  <label class="form-file-label" for="legal"></label>

                  <div id="selectedFiles2"></div>
                  <div class="valid-feedback">Looks good!</div>
                </div>
              </div>
            </div>
          </div>

          <hr class="my-5" />

          <!-- Password section -->
          <div class="col-md-6">
            <label class="form-label" for="password">Password</label>
            <input
              class="form-control"
              type="password"
              id="myInput"
              name="password"
              style="max-width: 500px"
              required
            />
            <input type="checkbox" onclick="myFunction()" />
            <h15>Show Password</h15>
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
      </div>

      <!-- Card footer -->
      <div class="card-footer text-end py-4 px-5 bg-light border-0">
        <button type="submit" class="btn btn-primary btn-rounded">
          Submit
        </button>
        <button class="btn btn-primary btn-rounded">
