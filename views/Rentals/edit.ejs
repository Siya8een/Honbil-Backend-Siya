<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Rental</h1>
  <div class="col-6 offset-3">
    <form
      action="/Honbil/<%=rental._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="title"
          value="<%=rental.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="quantity">Quantity</label>
        <input
          class="form-control"
          type="text"
          id="quantity"
          name="quantity"
          value="<%=rental.quantity %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Rental Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="price"
            value="<%=rental.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="description"
          required
        >
<%= rental.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Rental</button>
      </div>
    </form>
    <a href="/Honbill/<%= rental._id%>">Back To Rental</a>
  </div>
</div>
