<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New Rental</h1>
  <div class="col-6 offset-3">
    <form
      action="/Honbil"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="rental[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="quantity">Quantity</label>
        <input
          class="form-control"
          type="number"
          id="quantity"
          name="rental[quantity]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <input
        type="file"
        name="image"
        id="image"
        class="form-control"
        multiple
      />

      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="rental[image]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div> -->
      <br />

      <div class="mb-3">
        <label class="form-label" for="price">Rental Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">&#8377;</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="rental[price]"
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="rental[description]"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Rental</button>
      </div>
    </form>
    <a href="/Honbil">All Rentals</a>
  </div>
</div>
